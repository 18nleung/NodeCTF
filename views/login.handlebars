
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Log In</h2>{{#if loginMessage}}
        <div class="alert alert-danger">
          <p> {{loginMessage}}</p>
        </div>{{/if}}
        <form id="local-sign-in" action="/login" method="post">
          <div class="form-group">
            <label for="username">Team Name</label>
            <input id="username" type="text" name="username" required="required" class="form-control"/>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input id="password" type="password" name="password" required="required" class="form-control"/>
          </div>
          <div class="form-group text-right">
            <button type="submit" class="btn btn-primary">Log In &raquo;</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<div id="particles-js"></div>