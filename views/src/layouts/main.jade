doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='user auth')
    
    title CTF
    
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.4/yeti/bootstrap.min.css", rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Raleway', rel='stylesheet')
    link(href='/styles.css', rel='stylesheet')
    // so I can use jQuery in other files
    script(src='https://code.jquery.com/jquery-2.1.4.min.js')
  body
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      div.container-fluid
        div.navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-content')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='./') CTF
        div.collapse.navbar-collapse#navbar-content
          ul.nav.navbar-nav
            li
              a(href='./') Home
            | {{#if user}}
            li
              a(href='./play') Play
            | {{/if}}
            li
              a(href='./scoreboard') Scoreboard
            li
              a(href='./faq') FAQ
            | {{#isAdmin user}}
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown', role='button', href='#') Admin #[span.caret]
              ul.dropdown-menu(role='menu')
                li
                  a(href='./admin') Admin Dashboard
                li
                  a(href='./admin-users') User Control
                li
                  a(href='./admin-challenges') Challenges Control
            | {{/isAdmin}}
          ul.nav.navbar-nav.navbar-right
            | {{#if user}}
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown', role='button', href='#') {{user.username}} #[span.caret]
              ul.dropdown-menu(role='menu')
                li
                  a(href='./account') Account
                li
                  a(href='./logout') Log Out
            | {{else}}
            li
              a(href='./login') Log In
            li
              a(href='./register') Register
            | {{/if}}
    main.flex-container
      | {{{body}}}
    footer
      div.container
        p.pull-left &copy;2015 CTF
        p.pull-right #[a(href='http://twitter.com') Follow us on Twitter for Updates]
      
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
    script(src='/scripts.js')
